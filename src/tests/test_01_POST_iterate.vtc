varnishtest "iterate(post)"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import parsereq from "${vmod_topbuild}/src/.libs/libvmod_parsereq.so";

	sub iterate {
		parsereq.post_read_next();
		set req.http.hoge = req.http.hoge + parsereq.post_read_cur() + ":";
		set req.http.hoge = req.http.hoge + parsereq.post_header(parsereq.post_read_cur()) + " ";
	}
	sub vcl_recv {
		parsereq.init();
		if(1 == 0){
			call iterate;
		}
		set req.http.hoge= "";
		C{
			Vmod_Func_parsereq.post_read_iterate(sp, (const char*)VGC_function_iterate);
		}C

	}
	sub vcl_deliver{
		set resp.http.t1 = req.http.hoge;
	}
} -start

client c1 {
	txreq -req POST -url "/" -hdr "Content-Type: application/x-www-form-urlencoded; charset=UTF-8" -body "a=c&b=d"
	rxresp
	expect resp.http.t1   == "b:d a:c "



}


client c1 -run
